<resources
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:forceDarkAllowed="false">
    <!-- Base application theme. -->
    <style name="Theme.BMECTE" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!--    Тема статус бара    -->
        <item name="android:statusBarColor">@color/orange</item>
        <!-- Customize your theme here. -->
        <!--    Убрать экшен бар (название окна)    -->
<!--        <item name="windowActionBar">false</item>-->
<!--        <item name="windowNoTitle">true</item>-->
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/orange</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="android:windowSplashScreenBrandingImage">@drawable/ic_splashscreen_branding_centered</item>
    </style>


    <style name="BottomNavigationTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/orange</item>
    </style>

</resources>